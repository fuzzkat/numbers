<h1>You're <%= to_words(@pager.count).titlecase %> in a Million!</h1>

<%= form_tag("/", method: 'get') do %>
  <%= label_tag(:count, "Numbers per Page:") %>
  <%= text_field_tag(:count, @pager.count) %>
  <%= submit_tag("Reload") %>
  <%= hidden_field_tag(:page, @pager.page) %>
<% end %>
<p><%= page_control @pager, self %></p>

<p class="numbers">
  <% @pager.this_page.each_with_index do |number, index| %>
    <%= to_words(number) %><% if index != @pager.this_page.size - 1 %>, <% end %>
  <% end %>
</p>

<p><%= page_control @pager, self %></p>

